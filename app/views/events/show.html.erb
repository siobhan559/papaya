<div class="col-12 p-0">
  <div class="show">
    <div class="picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @event.photo.key, height: 300, crop: :fill %>')">
    </div>
  </div>
</div>
<div class="col-12 col-md-8 col-lg-6 p-0">
  <div class="show">
    <div class="info shadow p-5">
      <div class="text-center">
        <h1 class="mb-3"><%= @event.name %></h1>
        <p class="my-1"><em><strong><%= @event.start_time.strftime('%b %e') %>:</strong> <%= @event.start_time.strftime('%l:%m %p') %>-<%= @event.end_time.strftime('%l:%m %p') %></em></p>
        <%= link_to "Organized by: #{@event.user.name}", profile_path(@event.user), id: 'creator' %>
      </div>
      <p class="mt-3"><%= @event.description %></p>
      <p><strong>Address: </strong><%= @event.address %></p>
      <% if current_user == @event.user %>
        <div class="shadow d-flex rounded-pill align-items-center justify-content-center my-3">
          <ul class="m-0 p-3">
            <% @event.bookings.each do |booking| %>
              <li>
                <%= link_to booking.user.name, profile_path(booking.user), id: 'creator' %>
                <% if booking.pending %>
                  <%= link_to event_booking_path(@event, booking), method: :patch, class: 'btn btn-flat btn-thin ml-2' do %>
                    <i class="fas fa-check"></i>
                  <% end %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <div class="register-form justify-content-center d-flex mb-2">
          <% if @booking.pending.nil? %>
            <%= link_to 'Register', event_bookings_path(@event), method: :post, class: 'btn btn-flat btn-block' %>
          <% elsif @booking.pending %>
            <%= link_to 'Your registration is pending', event_booking_path(@event, @booking), method: :delete, class: 'btn btn-flat btn-block' %>
          <% else %>
            <%= link_to 'Unregister', event_booking_path(@event, @booking), method: :delete, class: 'btn btn-flat btn-block' %>
          <% end %>
        </div>
      <% end %>
      <div class="justify-content-center d-flex">
        <%= link_to "Go Back", :back, class: 'btn btn-ghost btn-block' %>
      </div>
    </div>
  </div>
</div>

<%= link_to event_path(event) do %>
  <div class="index-card" >
    <div class="picture">
      <%= cl_image_tag event.photo.key, alt: '#' %>
    </div>
    <div class="info">
      <div class="index-card-event">
        <div class="index-card-info">
          <h2> <%= event.name %> </h2>
          <div class="category">
            <%= event.category %>
          </div>
          <p> <%= event.start_time.strftime("%A, %d %b %Y %l:%M %p") %> until <%= event.end_time. strftime("%A, %d %b %Y %l:%M %p") %> </p>
          <p> <%= truncate(event.description, length:25, separator: ' ', omission: '.....see more') %>
          <p> <%= cl_image_tag event.user.photo.key, alt: '#' %> by <%= event.user.company_name %> </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
